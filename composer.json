{
  "name": "spaghetti-dojo/burokku",
  "description": "A modern WordPress Block Theme inspired by shadcn/ui design system",
  "type": "wordpress-theme",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Spaghetti Dojo",
      "homepage": "https://github.com/Spaghetti-Dojo"
    }
  ],
  "require": {
    "php": ">=8.4",
    "inpsyde/modularity": "^1.7"
  },
  "require-dev": {
    "inpsyde/php-coding-standards": "^2.0",
    "phpstan/phpstan": "^2.0",
    "szepeviktor/phpstan-wordpress": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "SpaghettiDojo\\Burokku\\": "sources/"
    },
    "files": [
      "inc/template.php",
      "inc/blocks.php",
      "inc/assets.php"
    ]
  },
  "scripts": {
    "cs": "phpcs",
    "cs:fix": "phpcbf",
    "analysis": "phpstan analyse",
    "qa": [
      "@cs",
      "@analysis"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "classmap-authoritative": false,
    "apcu-autoloader": false
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
