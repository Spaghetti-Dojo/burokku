{
  "name": "spaghetti-dojo/burokku",
  "description": "A modern WordPress Block Theme inspired by shadcn/ui design system",
  "type": "wordpress-theme",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Spaghetti Dojo",
      "homepage": "https://github.com/Spaghetti-Dojo"
    }
  ],
  "require": {
    "php": ">=8.1",
    "inpsyde/modularity": "^1.7",
    "roots/wordpress-no-content": "6.9"
  },
  "require-dev": {
    "syde/phpcs": "^1.0",
    "inpsyde/wp-stubs": "dev-main",
    "bnf/phpstan-psr-container": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "SpaghettiDojo\\Burokku\\": "sources/"
    },
    "files": [
      "inc/package.php"
    ]
  },
  "scripts": {
    "cs": "phpcs",
    "cs:fix": "phpcbf",
    "analysis": "./vendor/bin/phpstan analyse",
    "qa": [
      "@cs",
      "@analysis"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "roots/wordpress-core-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "classmap-authoritative": false,
    "apcu-autoloader": false
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
