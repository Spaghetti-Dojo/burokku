<?xml version="1.0"?>
<ruleset name="Burokku">
    <description>PHP Coding Standards for Burokku Theme</description>

    <!-- What to scan -->
    <file>./inc</file>
    <file>./sources</file>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/assets/*</exclude-pattern>

    <!-- How to scan -->
    <arg value="sp"/> <!-- Show sniff and progress -->
    <arg name="basepath" value="."/> <!-- Strip the file paths -->
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/> <!-- Enables parallel processing -->

    <!-- Rules: Inpsyde Coding Standards -->
    <rule ref="Inpsyde">
        <!-- Allow WordPress naming conventions for functions -->
        <exclude name="Inpsyde.CodeQuality.FunctionLength.TooLong"/>
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
    </rule>

    <!-- PHP Version -->
    <config name="testVersion" value="8.1-"/>

    <!-- Additional rules -->
    <rule ref="PSR12"/>
    
    <!-- Text domain check for WordPress i18n -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="burokku"/>
            </property>
        </properties>
    </rule>

    <!-- Enforce strict types declaration -->
    <rule ref="Generic.PHP.RequireStrictTypes"/>
</ruleset>
